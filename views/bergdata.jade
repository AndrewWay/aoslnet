extends layout
block content
    script(src="https://cdn.plot.ly/plotly-latest.min.js")
    script(type="text/javascript" src="js/modernizr-1.5.min.js")
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper
        //BERG INFO
        #bergInfo
            h2 Berg Info
            p
                strong bergID:
                |  <span id='bergID'></span>
                br
                strong bergX:
                |  <span id='bergX'></span>
                br
                strong bergY:
                |  <span id='bergY'></span>
                br
                strong bergZ:
                |  <span id='bergZ'></span>
        // /USER INFO
        
        // BERG LIST
        h2 Berg List
        #bergList
            table
                thead
                    th bergID
                    th X
                    th Y
                    th Z
                tbody
        // /BERG LIST
    div#iceberg_plot
        p put the iceberg here
    // /WRAPPER
