//iceberg model

function updateMesh(xarr,yarr,zarr){
console.log('updateMesh() starting');
var data=[
  {
    alphahull:5,
    opacity:1,
    color:'rgb(230, 255, 255)',
    type: 'mesh3d',
    x: xarr,
    y: yarr,
    z: zarr
  }
];
// Plotting the mesh
Plotly.newPlot('iceberg_plot', data);
console.log('updateMesh() ending');
}
